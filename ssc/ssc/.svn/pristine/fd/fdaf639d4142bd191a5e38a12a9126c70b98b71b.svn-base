<include file="Public/header" />
<style>
.pages a,.pages span {
    display:inline-block;
    padding:2px 5px;
    margin:0 1px;
    border:1px solid #f0f0f0;
    -webkit-border-radius:3px;
    -moz-border-radius:3px;
    border-radius:3px;
}
.pages a,.pages li {
    display:inline-block;
    list-style: none;
    text-decoration:none; color:#58A0D3;
}
.pages a.first,.pages a.prev,.pages a.next,.pages a.end{
    margin:0;
}
.pages a:hover{
    border-color:#50A8E6;
}
.pages span.current{
    background:#50A8E6;
    color:#FFF;
    font-weight:700;
    border-color:#50A8E6;
}
</style>
<div class="wrapper wrapper-content animated fadeInRight"> 
   <div class="row"> 
    <div class="col-sm-12"> 
     <div class="ibox float-e-margins"> 
      <div class="ibox-title"> 
       <h5>总代列表</h5> 
      <div class="ibox-content">  
       <div class="table-responsive"> 
        <table class="table table-striped"> 
         <thead> 
          <tr> 
           <th>id</th> 
           <th>代理</th> 
           <th>手机号码</th> 
           
           <th>操作</th> 
          </tr> 
         </thead> 
         <tbody> 
         <foreach name="distributor_list" item="item" key="key">
          <tr> 
           <td>{$item.id}</td> 
           <td>{$item.username}</td>  
           <td>{$item.mobile}</td>
           <td>
              <a href="{:U('Home/distributor/distributorBonus/ID/'.$item['id'])}">查看分红</a>
              <a href="{:U('Home/distributor/distributorCount/ID/'.$item['id'])}">查看数据</a>
           </td>  
          </tr>
          </foreach>
          </tbody> 
        </table> 
       </div> 
       <div class="pages">{$page}</div> 
      </div>      
     </div>      
    </div>    
   </div>   
  </div> 
  <include file="Public/footer" />