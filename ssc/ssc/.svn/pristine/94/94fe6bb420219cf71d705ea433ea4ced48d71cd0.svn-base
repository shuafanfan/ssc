<html>
 <head></head>
 <body class="gray-bg">
  <include file="Public/header" />  
  <div class="wrapper wrapper-content animated fadeInRight"> 
   <div class="row"> 
    <div class="col-sm-12"> 
     <div class="ibox float-e-margins"> 
      <div class="ibox-title"> 
       <h5>公告列表</h5>
<!--       <if condition="($type eq '') and ($threeMenuInfo neq '')">
       <a href="{$threeMenuInfo.name}">
       <button type="button" class="btn btn-primary" style="float:right;margin-top:-10px;">{$threeMenuInfo.title}</button>
       </a>
       <else/>
       <a href="{$threeMenuInfo.name}">
       <button type="button" class="btn btn-primary" style="float:right;margin-top:-10px;">{$threeMenuInfo.title}</button>
       </a>
       </if>-->
       <a href="{:U('Home/Article/articleAdd')}">
       <button type="button" class="btn btn-primary" style="float:right;margin-top:-10px;">添加公告+</button>
       </a>
      </div> 
      <div class="ibox-content">
       <div class="table-responsive"> 
        <table class="table table-striped"> 
         <thead> 
          <tr> 
           <th>id</th> 
           <th>标题</th> 
           <th>作者</th> 
           <th>发布时间</th>
           <th>操作</th> 
          </tr> 
         </thead> 
         <tbody> 
         <foreach name="article_list" item="item" key="key" >
          <tr> 
           <td>{$item.id}</td> 
           <td>{$item.title}</td> 
           <td>{$item.admin}</td> 
           <td>{$item.addtime}</td>
           <td>
               <a href="{:U('Home/Article/articleEdit/articleID/'.$item['id'])}">编辑</a>
               <a href="javascript:del({$item.id})">删除</a>
           </td>  
          </tr> 
         </foreach>
         </tbody> 
        </table> 
       </div> 
      </div> 
     </div> 
    </div> 
   </div> 
  </div> 
  <include file="Public/footer" />
  <script type="text/javascript">
     function del(articleID){
    	 if (confirm('确定删除吗？') == true){
    		 $.ajax({
    			 url: '{:U('Home/article/articleDel')}',
    			 type: 'post',
    			 dataType: 'json',
    		     data: {'articleID':articleID},
    		     success: function (data) {
    		    	 if (data.state == true) {
                         alert('删除成功！');
                         window.location.reload(); 
                     } else {
                    	 alert('删除失败!');
                     }
    		     }
    		 });
    	 }
     }
  
  </script>    
 </body>
</html>